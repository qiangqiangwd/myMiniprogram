/* miniprogram/pages/myTags/addOrEdit/index.wxss */
.addOrEditBox {
  background: #ffffff;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  -ms-border-radius: 10rpx;
  -o-border-radius: 10rpx;
}
input,
textarea,
picker {
  font-size: 28rpx;
  line-height: 32rpx;
  color: #333333;
  width: 100%;
}
.plClass {
  color: #999999;
}
.addOrEditBox .list,
.pickerBox {
  border: 1px solid #eeeeee;
  padding: 16rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  -ms-border-radius: 10rpx;
  -o-border-radius: 10rpx;
}
.pickerBox {
  padding: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.pickerBox image{
  width: 20rpx;
  height: 20rpx;
}
.imgBox {
  margin-bottom: 20rpx;
  height: 300rpx;
  border: 1px dashed #eeeeee;
  border-radius: 10rpx;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  -ms-border-radius: 10rpx;
  -o-border-radius: 10rpx;
  color: #333333;
  overflow: hidden;

  position: relative;
}
.imgBox image {
  height: 100%;
}
.imgBox .upLoadImgBox {
  width: 100%;
  height: 300rpx;
  text-align: center;
  font-size: 0;
  position: relative;
}
.imgBox .upLoadImgBox image {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin: -50rpx 0 0 -50rpx;
}
.hide {
  display: none;
}

.delBtn {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  background: rgba(255, 255, 255, 0.8);
  padding: 10rpx;
  border-radius: 10rpx;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  -ms-border-radius: 10rpx;
  -o-border-radius: 10rpx;
  box-shadow: 0 0 18rpx #cccccc;
  font-size: 0;
  line-height: 1;
}
.delBtn image {
  width: 40rpx;
  height: 40rpx;
}

.addOrEditBox .textareaList{
  padding-bottom: 40rpx;
  position: relative;
}
.addOrEditBox .textareaList textarea{
  height: 400rpx;
}
.textareaList .textNum{
  position: absolute;
  bottom: 0;
  right: 10rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #999999;
}
