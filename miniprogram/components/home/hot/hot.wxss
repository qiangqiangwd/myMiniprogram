/* components/home/hot.wxss */
.container {
  padding: 20rpx;
}
.list {
  background: #ffffff;
  padding: 20rpx;
  border-radius: 10rpx;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  -ms-border-radius: 10rpx;
  -o-border-radius: 10rpx;
}
.list .tit {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 1;
}
.list .tit .name {
  width: 88%;
  font-size: 32rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list .tit .label {
  color: #f56c6c;
  font-size: 24rpx;
}
.list .img {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  -ms-border-radius: 10rpx;
  -o-border-radius: 10rpx;
  overflow: hidden;
}
.list .img image {
  width: 100%;
  height: 100%;
}
.list .desc {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  text-align: justify;
  word-break: break-all;
}
.othInfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.leftCnt {
  display: flex;
}
.leftCnt > view {
  margin-right: 80rpx;
}
.leftCnt > view > text {
  vertical-align: middle;
  margin-left: 10rpx;
  font-size: 26rpx;
  color: #666666;
}
.leftCnt .icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.rightIcon {
  width: 24rpx;
  height: 24rpx;
}

.myTagsCnt .t {
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #999999;
}
.myTagsCnt .btnBox {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  border-top: 1px solid #eeeeee;
}
.myTagsCnt .btnBox > view {
  flex-grow: 1;
  text-align: center;
  box-sizing: border-box;
  font-size: 28rpx;
  /* color: #333333; */
  padding: 20rpx 0;
}
.myTagsCnt .btnBox > view:nth-of-type(1){
  color: #2d8cf0;
  border-right: 1px solid #eeeeee;
}
.myTagsCnt .btnBox > view:nth-of-type(2){
  color: #f56c6c
}
